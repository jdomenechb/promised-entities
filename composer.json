{
    "name": "jdomenechb/promised-entities",
    "type": "library",
    "description": "Fetch entities or value objects asynchronously by using promises",
    "license": "MIT",
    "authors": [
        {
            "name": "Jordi Dom√®nech Bonilla",
            "email": "jdomenechbborges@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1|^8"
    },
    "require-dev": {
        "ext-json": "*",
        "phpunit/phpunit": "^9.3",
        "guzzlehttp/promises": "^1",
        "symplify/easy-coding-standard-prefixed": "^8.3",
        "vimeo/psalm": "^3.16",
        "guzzlehttp/guzzle": "^6.5"
    },
    "autoload": {
        "psr-4": {
            "PromisedEntities\\" : "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PromisedEntities\\SrcTest\\": "src-test",
            "PromisedEntities\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit tests",
        "cs": "vendor/bin/ecs check --fix",
        "psalm": "vendor/bin/psalm --show-info=true"
    }
}
